# streams #
&score Num
&coin Byte
&guess Byte
&win Atom
&newCoin Byte

# pipes #
| id   [ &guess 99 ] &newCoin
| cmp  [ &guess 99 &coin 99 ] &win
| incr [ &win 99 &score 99 ] &score

id -> Byte Byte
id x = x

cmp -> Byte -> Byte Atom
cmp a b = == a b

incr -> Atom -> Num Num
incr won score = + score ? won 1 - 0 1
