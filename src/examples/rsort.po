neg -> Num Num
neg x = - 0 x

tail -> [a] [a]
tail xs = !! xs 1 (length xs)

empty [Num]
empty = Num []

length -> [a] Num
length xs =
  ? == Char [] xs 0
  ?? + 1 (length !! xs 0 (neg 1))

sort -> [Num] [Num]
sort ns = (sort2 (length ns) ns)

sort2 -> Num -> [Num] [Num]
sort2 len ns =
  ? <= len 1 ns
  ?? (merge (sort !! ns 0 / len 2) (sort !! ns / len 2 len))

cmpH -> [Num] -> [Num] [[Num] [Num]]
cmpH xs ys =
  ? < ! xs 0 0 ! ys 0 0 [xs ys]
  ?? [ys xs]

merge -> [Num] -> [Num] [Num]
merge xs ys =
  ? == xs (empty) ys
  ? == ys (empty) xs
  ?? (merge2 (cmpH xs ys))

merge2 -> [[Num] [Num]] [Num]
merge2 xys = ++ !! (fst xys) 0 1 (merge (tail fst xys) snd xys)

weird -> Num Num
weird x =
  ?
    ? True T
    ??
      ? True T
      ?? False T
  ?? 4
